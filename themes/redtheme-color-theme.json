{
  "name": "redtheme",
  "type": "dark",
  "semanticHighlighting": true,
  "colors": {
    "editor.background": "#19191a",
    "editor.foreground": "#ff0000",
    "editorCursor.foreground": "#ffffff",
    "terminalCursor.foreground": "#ffffff",
    "focusBorder": "#ffedcb",

    // Selections, Searches
    "editor.selectionBackground": "#202020",
    "editor.selectionHighlightBackground": "#20202000",
    "editor.wordHighlightBackground": "#00000000",
    "editor.wordHighlightStrongBackground": "#00000000",
    "editor.findMatchBackground": "#00000000",
    "editor.findMatchHighlightBackground": "#202020",
    "editor.findMatchBorder": "#f3dbb0",
    "editor.rangeHighlightBackground": "#00000000",

    // Gutter background when active
    "editor.lineHighlightBackground": "#202020",

    // Actions
    "toolbar.hoverBackground": "#ff0000",
    "toolbar.hoverOutline": "#00ff00",
    "toolbar.activeBackground": "#0000ff",

    // List and Trees
    "selection.background": "#101010",
    "list.hoverBackground": "#202020",

    // Tabs and Editor Groups
    "editorGroup.border": "#000000",
    "editorGroupHeader.tabsBackground": "#101010",
    "tab.activeBackground": "#19191a",
    "tab.inactiveBackground": "#101010",
    "tab.border": "#00000000",

    // Button

    // Dropdown, Widgets
    "editorSuggestWidget.background": "#19191a",
    "editorSuggestWidget.foreground": "#caced1",
    "editorSuggestWidget.selectedBackground": "#202020",
    "editorSuggestWidget.highlightForeground": "#f3dbb0",
    "editorSuggestWidget.focusHighlightForeground": "#f3dbb0",
    "editorSuggestWidget.selectedForeground": "#f3dbb0",

    // Input

    // Scrollbar

    // Badge

    // Progress Bar

    // Side Bar
    "sideBar.background": "#101010",
    "sideBarTitle.foreground": "#ffffff",

    // Activity Bar
    "activityBar.background": "#101010",

    // Status Bar
    "statusBar.background": "#101010",
    "statusBar.foreground": "#caced1",
    "statusBar.noFolderBackground": "#101010",
    "statusBar.debuggingBackground": "#ffdd9f",
    "statusBarItem.hoverBackground": "#202020",

    // Title Bar
    "titleBar.activeBackground": "#101010",
    "titleBar.inactiveBackground": "#101010"

    // Menu Bar

    // Panel
  },
  "tokenColors": [
    {
      "name": "Comment",
      "scope": ["comment", "punctuation.definition.comment"],
      "settings": {
        "foreground": "#53545e"
      }
    },
    {
      "name": "Storage, Attributes, Markdown Bold/Italics/Links",
      "scope": [
        "storage",
        "keyword.control",
        "keyword.operator.new",
        "entity.other.attribute-name",
        "markup.bold.markdown",
        "markup.italic.markdown",
        "markup.underline.link"
      ],
      "settings": {
        "foreground": "#f3dbb0"
      }
    },
    {
      "name": "Variables, Text, CSS Value",
      "scope": [
        "variable",
        "support.variable.property",
        "meta.jsx.children.js.jsx",
        "text.html.derivative",
        "meta.property-value",
        "meta.property-name.css",
        "text.svelte",
        "meta.paragraph.markdown",
        "constant.language.import-export-all",
        "meta.object-literal.key"
      ],
      "settings": {
        "foreground": "#caced1"
      }
    },
    {
      "name": "Functions, Classes, Tags, Markdown Headings",
      "scope": [
        "entity.name.function",
        "entity.name.type.class",
        "entity.name.tag",
        "support.class.component.svelte",
        "markup.heading.markdown"
      ],
      "settings": {
        "foreground": "#ad836a"
      }
    },
    {
      "name": "Assignment",
      "scope": ["keyword.operator"],
      "settings": {
        "foreground": "#e2a967"
      }
    },
    {
      "name": "Punctuation",
      "scope": ["punctuation"],
      "settings": {
        "foreground": "#53545e",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Strings, Numbers, Booleans, Quotations, Null",
      "scope": [
        "string",
        "punctuation.definition.string",
        "constant.numeric",
        "constant.language.null",
        "constant.language.boolean"
      ],
      "settings": {
        "foreground": "#6090e9"
      }
    },
    {
      "name": "Brackets",
      "scope": [
        "meta.brace.round",
        "meta.brace.square",
        "punctuation.definition.block",
        "punctuation.definition.binding-pattern.object",
        "punctuation.definition.parameters",
        "punctuation.definition.entity.css"
      ],
      "settings": {
        "foreground": "#53545e",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Types",
      "scope": ["entity.name.type", "support.type"],
      "settings": {
        "foreground": "#ac9d89"
      }
    }
  ]
}
