{
  "name": "redtheme",
  "type": "dark",
  "semanticHighlighting": true,
  "colors": {
    "editor.background": "#19191a",
    "editor.foreground": "#ff0000",
    "editor.lineHighlightBackground": "#202020",
    "activityBarBadge.background": "#ff0000",
    "sideBarTitle.foreground": "#ff0000",

    /* Status Bar */
    "statusBar.background": "#1A1A1A",
    "statusBar.noFolderBackground": "#212121",
    "statusBar.debuggingBackground": "#263238"

    /* Brackets */
    // "editorBracketHighlight.foreground1": "#ff0000",
    // "editorBracketHighlight.foreground2": "#ff0000",
    // "editorBracketHighlight.foreground3": "#ff0000"
  },
  "tokenColors": [
    {
      "name": "Comment",
      "scope": ["comment", "punctuation.definition.comment"],
      "settings": {
        "foreground": "#53545e"
      }
    },
    {
      "name": "Storage, Attributes, Markdown Bold/Italics/Links",
      "scope": [
        "storage",
        "keyword.control",
        "keyword.operator.new",
        "entity.other.attribute-name",
        "markup.bold.markdown",
        "markup.italic.markdown",
        "markup.underline.link"
      ],
      "settings": {
        "foreground": "#f3dbb0"
      }
    },
    {
      "name": "Variables, Text, CSS Value",
      "scope": [
        "variable",
        "support.variable.property",
        "meta.jsx.children.js.jsx",
        "text.html.derivative",
        "meta.property-value",
        "meta.property-name.css",
        "text.svelte",
        "meta.paragraph.markdown"
      ],
      "settings": {
        "foreground": "#caced1"
      }
    },
    {
      "name": "Functions, Classes, Tags, Markdown Headings",
      "scope": [
        "entity.name.function",
        "entity.name.type.class",
        "entity.name.tag",
        "support.class.component.svelte",
        "markup.heading.markdown"
      ],
      "settings": {
        "foreground": "#ad836a"
      }
    },
    {
      "name": "Assignment",
      "scope": ["keyword.operator"],
      "settings": {
        "foreground": "#e2a967"
      }
    },
    {
      "name": "Punctuation",
      "scope": ["punctuation"],
      "settings": {
        "foreground": "#53545e",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Strings, Numbers, Booleans, Quotations, Null",
      "scope": [
        "string",
        "punctuation.definition.string",
        "constant.numeric",
        "constant.language.null",
        "constant.language.boolean"
      ],
      "settings": {
        "foreground": "#6090e9"
      }
    },
    {
      "name": "Brackets",
      "scope": [
        "meta.brace.round",
        "meta.brace.square",
        "punctuation.definition.block",
        "punctuation.definition.binding-pattern.object",
        "punctuation.definition.parameters",
        "punctuation.definition.entity.css"
      ],
      "settings": {
        "foreground": "#53545e",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Types",
      "scope": ["entity.name.type", "support.type"],
      "settings": {
        "foreground": "#ac9d89"
      }
    }
  ]
}
